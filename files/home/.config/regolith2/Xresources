! documentation: https://regolith-desktop.com/docs/using-regolith/configuration/

! look

regolith.look.path: HOME/.config/regolith2/looks/gruvbox-material

! i3wm base configuration

! Alt == Mod1 && Super == Mod4
i3-wm.mod: Mod4
i3-wm.alt: Mod1

i3-wm.program.compositor: picom --config ~/.config/regolith2/picom.conf

! i3wm keybindings

i3-wm.binding.terminal: Return
i3-wm.binding.browser: f
i3-wm.binding.fullscreen_toggle: Shift+f

i3-wm.binding.launcher.app: space
i3-wm.binding.launcher.cmd: (
i3-wm.binding.launcher.window: )
i3-wm.binding.float_toggle: Shift+space

i3-wm.binding.exit_app: q

i3-wm.binding.files: n
i3-wm.binding.notification_ui: Shift+n

i3-wm.binding.settings: Shift+c
i3-wm.binding.reload: Ctrl+Shift+c
i3-wm.binding.code: c

! auto-start applications

i3-wm.program.1: nm-applet &
i3-wm.program.2: ~/.config/polybar/launch.sh
